<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>expense-reimbursement</display-name>
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.ersystem.controllers.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ViewTicketServlet</servlet-name>
  	<servlet-class>com.ersystem.controllers.ViewTicketServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>ViewTicketServlet</servlet-name>
  	<url-pattern>/view</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>SubmitTicketServlet</servlet-name>
  	<servlet-class>com.ersystem.controllers.SubmitTicketServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>SubmitTicketServlet</servlet-name>
  	<url-pattern>/submit</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>UpdateTicketServlet</servlet-name>
  	<servlet-class>com.ersystem.controllers.UpdateTicketServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>UpdateTicketServlet</servlet-name>
  	<url-pattern>/update</url-pattern>
  </servlet-mapping>
  
</web-app>